<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.appedificaciones.fragments.account.LoginFragment"
        android:label="Login Fragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <activity
        android:id="@+id/homeFragment"
        android:name="com.example.appedificaciones.HomeActivity" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.appedificaciones.fragments.account.RegisterFragment"
        android:label="Register Fragment"
        tools:layout="@layout/fragment_register" />
</navigation>
